Begin OnActivate

; set up the array for classes
let aClasses := ar_Construct Array
let aClasses[0] := Acrobat
let aClasses[1] := Agent
let aClasses[2] := Archer
let aClasses[3] := Assassin
let aClasses[4] := Barbarian
let aClasses[5] := Bard
let aClasses[6] := Battlemage
let aClasses[7] := Crusader
