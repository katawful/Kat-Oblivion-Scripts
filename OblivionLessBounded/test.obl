let aClasses[16] := Sorcerer
let aClasses[17] := Spellsword
let aClasses[18] := Thief
let aClasses[19] := Warrior
let aClasses[20] := Witchhunter
let iClassSize := ar_Size aClasses

; set up array for birthsign
let aBirth := ar_Construct Array
